                                        <div class="col-lg-12">
                                            <input type="text" name="position" id="positionForApplying" class="form-control" required="">
                                        </div>
                                    </div>
                                    <label for="attachFile" class="mb-0">*Attach your resume:</label>
                                    <div class="row mb-2">
                                        <div class="col-lg-12">
                                            <input type="file" name="file" id="attachFile" class="form-control" required="">
                                        </div>
                                    </div>
                                    <div class="row mb-2 justify-content-center">
                                    <button type="submit" class="btn btn-secondary btn-lg ">Submit</button>  
                                    </div>
                                    
                                

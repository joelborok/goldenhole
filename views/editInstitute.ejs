<section class="section-2">
  <div class="container">
   <form method="POST" action="/institutes/<%=institute._id%>?_method=PUT">
     <div class="form-group">
       <label>Name:</label>
       <input class="form-control"type="text" name="name" value="<%=institute.name%>" placeholder="name" required>
     </div>
     <div class="form-group">
       <label>Image</label>
       <input class="form-control"type="text" name="image" value="<%=institute.image%>" placeholder="image" required>
     </div>
     <div class="form-group">
       <label>Description</label>
       <textarea class="form-control" name="body" required><%=institute.body%></textarea>
     </div>
      <div class="form-group">
       <label>Address</label>
       <textarea class="form-control" name="address" required><%=institute.address%></textarea>
     </div>
     <div class="form-group">
       <label>Website</label>
       <input class="form-control"type="text" name="website" value="<%=institute.website%>" placeholder="enter website" required>
     </div>  
     <div class="form-group">
       <label>Affliations</label>
       <%var data=institute.affliation.toString();%>
       <%var data1=data.replace(/,/gi, "\n");%>
       <textarea class="form-control" name="affliation" required><%=data1%></textarea>
     </div>
     <div class="form-group">
       <label>Courses offered</label>
       <%peopleArray = Object.keys(institute.courses).map(i => institute.courses[i]);%>
          <%var arrayTest1=peopleArray.flat();%>
          <%var arrayTest2a=arrayTest1.slice();%>
       <textarea class="form-control"  name="courses" required><%for(var i=0;i < arrayTest2a.length;i++){%>
       <%=arrayTest2a[i].title%><%}%></textarea>
      
     </div>
     <div class="form-group">
       <label>Gallery</label>
       <%var data=institute.gallery.toString();%>
       <%var data1=data.replace(/,/gi, "\n");%>
       <textarea class="form-control" name="gallery" required><%=data1%></textarea>
     </div>
     <button>Update</button>
   </form>
   <form method="POST" action="/institutes/<%=institute._id%>?_method=DELETE"><button>Delete</button></form>
</section> 
